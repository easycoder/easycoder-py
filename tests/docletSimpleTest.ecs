!   docletTest.ecs

    script DocletTest

!    debug compile
!    debug step

    use plugin Doclets from ec_doclets

    list List
    variable FilePath
    variable N
    variable Text

    doclets init
        path `~/Doclets/Doclets,~/Doclets/EasyCoder,~/Doclets/RBR`
    
    get List from doclet query `api`

    put 0 into N
    while N is less than the count of List
    begin
        log item N of List
        increment N
    end

    put item 0 of List into FilePath
    get Text from doclet file FilePath
    log Text

    exit
